<%- include("partials/header") %>


<link rel="stylesheet" href="/css/admission.css">

<section class="admission-section">
  <div class="container-fluid px-2 px-sm-3 px-md-4 h-100">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-12 col-sm-11 col-md-10 col-lg-8 col-xl-7">
        <div class="text-center mb-4">
          <h1 class="fw-bold">Apply for Admission</h1>
          <p class="text-muted">Fill in your details and weâ€™ll reach out to help you join the right Spoken English course.</p>
        </div>
        <form action="/admission-form" method="POST" autocomplete="on" class="p-2 p-sm-3 p-md-4">
          <div class="row g-3 g-md-4">
            <div class="col-12 col-md-6">
              <label for="name" class="form-label fw-semibold">Full Name</label>
              <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Your full name" required>
            </div>
            <div class="col-12 col-md-6">
              <label for="email" class="form-label fw-semibold">Email Address</label>
              <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="you@example.com" required>
            </div>
            <div class="col-12 col-md-6">
              <label for="phone" class="form-label fw-semibold">Phone Number</label>
              <input type="tel" class="form-control form-control-lg" id="phone" name="phone" placeholder="Your phone number" required>
            </div>
            <div class="col-12 col-md-6">
              <label for="course" class="form-label fw-semibold">Select Course</label>
              <select class="form-select form-select-lg" id="course" name="course" required>
                <option selected disabled value="">-- Select a Course --</option>
                <option value="Basic English">Basic English</option>
                <option value="General Spoken English">General Spoken English</option>
                <option value="Advanced English">Advanced English</option>
                <option value="Study Abroad English">Study Abroad English</option>
              </select>
            </div>
            <div class="col-12">
              <label for="message" class="form-label fw-semibold">Message (Optional)</label>
              <textarea class="form-control form-control-lg" id="message" name="message" rows="3" placeholder="Any specific questions or requests?"></textarea>
            </div>
          </div>
          <div class="text-center mt-4 mt-md-5">
            <button type="submit" class="btn btn-primary btn-lg px-4 px-md-5 shadow-sm">Submit Application</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer") %>